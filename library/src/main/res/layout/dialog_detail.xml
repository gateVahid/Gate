<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white_background"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dd_textview_fieldTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:text="فیلد" />

                <EditText
                    android:id="@+id/dd_edittext_fieldET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/passchange_edittext_divider"
                    android:maxLength="35"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="مثال : وزن"
                    android:inputType="text"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dd_textview_valueTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:text="مقدار" />

                <EditText
                    android:id="@+id/dd_edittext_valueET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/passchange_edittext_divider"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="مثال : 2 کیلوگرم"
                    android:inputType="textPassword"
                    android:padding="8dp" />

            </LinearLayout>


            <Button
                android:id="@+id/dd_button_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                style="?android:buttonBarButtonStyle"
                android:text="ثبت"
                android:textColor="@color/colorAccent"
                android:textColorLink="@color/colorAccent"
                android:textSize="18sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>