<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/editprofile_edittext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editprofile_edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_name_dark"
        android:ems="10"
        android:hint="نام"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editprofile_edittext_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_username_dark"
        android:ems="10"
        android:hint="نام کاربری"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editprofile_edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_email_dark"
        android:ems="10"
        android:hint="ایمیل"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editprofile_edittext_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_address_dark"
        android:ems="10"
        android:hint="آدرس"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editprofile_edittext_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_phone_dark"
        android:ems="10"
        android:hint="شماره تماس"
        android:inputType="phone" />

    <Button
        android:id="@+id/editprofile_button_passchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_round_passchange"
        android:drawableTint="@color/color_white_trans"
        android:elevation="16dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="تغییر رمز عبور"
        android:textColor="@android:color/holo_red_dark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>