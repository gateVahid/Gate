<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white_background"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dialog_textview_oldpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:text="رمز عبور فعلی" />

                <EditText
                    android:id="@+id/dialoge_edittext_oldpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/passchange_edittext_divider"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="textPassword"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dialog_texview_newpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:text="رمز عبور جدید" />

                <EditText
                    android:id="@+id/dialoge_edittext_newpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/passchange_edittext_divider"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="textPassword"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dialog_texview_retypenewpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:text="تکرار رمز عبور جدید" />

                <EditText
                    android:id="@+id/dialoge_edittext_retypenewpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/passchange_edittext_divider"
                    android:ems="10"
                    android:gravity="right"
                    android:inputType="textPassword"
                    android:padding="8dp" />

            </LinearLayout>


            <Button
                android:id="@+id/dialog_button_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="ثبت"
                android:textColor="@color/colorAccent"
                android:textColorLink="@color/colorAccent"
                android:textSize="18sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>