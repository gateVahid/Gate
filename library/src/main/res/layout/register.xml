<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_background"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gate_green" />

    <EditText
        android:id="@+id/register_edittext_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edittext_round_white"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_username_dark"
        android:elevation="2dp"
        android:ems="10"
        android:hint="نام کاربری"
        android:inputType="textPersonName"
        android:padding="8dp" />

    <EditText
        android:id="@+id/register_edittext_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/edittext_round_white"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_password_dark"
        android:elevation="2dp"
        android:ems="10"
        android:gravity="right"
        android:hint="رمز عبور"
        android:inputType="textPassword"
        android:padding="8dp" />

    <EditText
        android:id="@+id/register_edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edittext_round_white"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_email_dark"
        android:elevation="2dp"
        android:ems="10"
        android:hint="ایمیل"
        android:inputType="textPersonName"
        android:padding="8dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/register_button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/button_round_register"
        android:elevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="ثبت نام"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

</LinearLayout>