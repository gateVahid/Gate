<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ap_imageview_icon"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_addphoto_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ap_textview_nameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="نام محصول" />

                        <EditText
                            android:id="@+id/ap_edittext_nameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:maxLength="35"
                            android:windowSoftInputMode="stateHidden">

                            <requestFocus />

                        </EditText>

                        <TextView
                            android:id="@+id/ap_textview_shortinfoTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_weight="1"
                            android:text="توضیحات کوتاه" />

                        <EditText
                            android:id="@+id/ap_edittext_shortinfoET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:maxLength="35" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ap_textview_secondarypriceTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="قیمت بدون تخفیف" />

                        <EditText
                            android:id="@+id/ap_edittext_secondarypriceET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="15" />

                        <TextView
                            android:id="@+id/ap_textview_primarypriceTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_weight="1"
                            android:text="قیمت فروش" />

                        <EditText
                            android:id="@+id/ap_edittext_primarypriceET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="15" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ap_textview_infoTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="false"
                            android:text="توضیحات کامل" />

                        <EditText
                            android:id="@+id/ap_edittext_infoET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:maxLength="1000"
                            android:windowSoftInputMode="stateHidden" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ap_imageview_slider1IV"
                                    android:layout_width="175dp"
                                    android:layout_height="175dp"
                                    android:layout_margin="8dp"
                                    android:layout_weight="1"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:src="@drawable/ic_addphoto_dark" />

                                <TextView
                                    android:id="@+id/ap_textview_slider1TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:background="@color/color_transparent_background"
                                    android:gravity="right"
                                    android:paddingBottom="4dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="4dp"
                                    android:text="اسلاید 1"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ap_imageview_slider2IV"
                                    android:layout_width="175dp"
                                    android:layout_height="175dp"
                                    android:layout_margin="8dp"
                                    android:layout_weight="1"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:src="@drawable/ic_addphoto_dark" />

                                <TextView
                                    android:id="@+id/ap_textview_slider2TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:background="@color/color_transparent_background"
                                    android:gravity="right"
                                    android:paddingBottom="4dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="4dp"
                                    android:text="اسلاید 2"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ap_imageview_slider3IV"
                                    android:layout_width="175dp"
                                    android:layout_height="175dp"
                                    android:layout_margin="8dp"
                                    android:layout_weight="1"
                                    android:elevation="0dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:src="@drawable/ic_addphoto_dark" />

                                <TextView
                                    android:id="@+id/ap_textview_slider3TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:background="@color/color_transparent_background"
                                    android:gravity="right"
                                    android:paddingBottom="4dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="4dp"
                                    android:text="اسلاید 3"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/ap_textview_slider4TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:background="@color/color_transparent_background"
                                    android:gravity="right"
                                    android:paddingBottom="4dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="4dp"
                                    android:text="اسلاید 4"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:id="@+id/ap_imageview_slider4IV"
                                    android:layout_width="175dp"
                                    android:layout_height="175dp"
                                    android:layout_margin="8dp"
                                    android:layout_weight="1"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:src="@drawable/ic_addphoto_dark" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ap_imageview_slider5IV"
                                    android:layout_width="175dp"
                                    android:layout_height="175dp"
                                    android:layout_margin="8dp"
                                    android:layout_weight="1"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:src="@drawable/ic_addphoto_dark" />

                                <TextView
                                    android:id="@+id/ap_textview_slider5TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:background="@color/color_transparent_background"
                                    android:gravity="right"
                                    android:paddingBottom="4dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="4dp"
                                    android:text="اسلاید 5"
                                    android:textColor="@color/color_white"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/ap_checkbox_addspecial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="اضافه کردن به محصولات ویژه"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/ap_checkbox_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="محصول منتخب اسلایدر"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ap_textview_priorityTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="اولویت"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/ap_editttext_priorityET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:ems="10"
                        android:inputType="number" />

                    <ImageView
                        android:id="@+id/ap_imageview_viewpagerpic"
                        android:layout_width="175dp"
                        android:layout_height="175dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_addphoto_dark" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:clickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ap_textview_adddetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/ic_plus_grey"
                        android:gravity="center_vertical|end"
                        android:padding="8dp"
                        android:text="اضافه کردن جزییات"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/ap_layout_detailcontainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>